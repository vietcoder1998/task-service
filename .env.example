# ============================================
# TASK SERVICE - Environment Configuration Template
# ============================================
# Copy this file to .env.local or .env.prod and fill in your values

# ============================================
# IMPORTANT: Docker vs Local Development
# ============================================
# FOR DOCKER: Use service names (mysql, redis, rabbitmq)
# FOR LOCAL: Use localhost with mapped ports (localhost:33060, localhost:6379, localhost:5672)

# ============================================
# SERVER CONFIGURATION
# ============================================
VTEC_NODE_ENV=development
VTEC_PORT=4000
VTEC_TASK_SERVICE_PORT=4000
VTEC_TASK_SERVICE_BASE_URL=http://localhost:4000
VTEC_WEBSITE_BASE_URL=http://localhost:4000

# ============================================
# DATABASE URLS
# ============================================
# FOR DOCKER (docker-compose):
VTEC_DATABASE_URL=mysql://devuser:devuser_password@mysql:3306/task_service_db
VTEC_REDIS_URL=redis://redis:6379
VTEC_RABBITMQ_URL=amqp://devuser:devpass@rabbitmq:5672

# FOR LOCAL DEVELOPMENT (uncomment and use these):
# VTEC_DATABASE_URL=mysql://devuser:devuser_password@localhost:33060/task_service_db
# VTEC_REDIS_URL=redis://localhost:6379
# VTEC_RABBITMQ_URL=amqp://devuser:devpass@localhost:5672

# ============================================
# MYSQL CONFIGURATION
# ============================================
VTEC_MYSQL_HOST=mysql               # Use 'localhost' for local development
VTEC_MYSQL_PORT=3306                # Internal port (use 33060 for local mapped port)
VTEC_MYSQL_USER=devuser
VTEC_MYSQL_PASSWORD=devuser_password
VTEC_MYSQL_DATABASE=task_service_db
VTEC_MYSQL_ROOT_PASSWORD=root_password

# ============================================
# REDIS CONFIGURATION
# ============================================
VTEC_REDIS_HOST=redis               # Use 'localhost' for local development
VTEC_REDIS_PORT=6379

# ============================================
# RABBITMQ CONFIGURATION
# ============================================
VTEC_RABBITMQ_PORT=5672
VTEC_RABBITMQ_MGMT_PORT=15672
VTEC_RABBITMQ_USER=devuser
VTEC_RABBITMQ_PASS=devpass
VTEC_RABBITMQ_QUEUE_NOTIFICATION=notification-events
VTEC_RABBITMQ_QUEUE_TODO=todo-events

# ============================================
# JWT CONFIGURATION
# ============================================
VTEC_JWT_SECRET=your-secret-key-change-in-production
VTEC_JWT_EXPIRES_IN=24h
VTEC_WEBSITE_JWT_TOKEN=your-jwt-token-change-in-production

# ============================================
# LOGGING
# ============================================
VTEC_LOG_LEVEL=info

# ============================================
# CORS CONFIGURATION
# ============================================
VTEC_CORS_ORIGIN=http://localhost:3000,http://localhost:3001
VTEC_WEBSITE=http://localhost:3000,http://localhost:3001
VTEC_WEBSITE_ALLOW_METHOD=GET,POST,PUT,DELETE

# ============================================
# NOCOBASE CONFIGURATION (Optional)
# ============================================
VTEC_NOCOBASE_DB=task_calendar_todo
VTEC_NOCOBASE_PORT=13030
VTEC_NOCOBASE_ALT_PORT=13000
VTEC_NOCOBASE_EMAIL=admin@nocobase.com
VTEC_NOCOBASE_PASSWORD=admin123

# ============================================
# TIMEZONE
# ============================================
TZ=Asia/Ho_Chi_Minh
