# ============================================
# TASK SERVICE - Environment Configuration Template
# ============================================
# Copy this file to .env.local or .env.prod and fill in your values

# ============================================
# IMPORTANT: Docker vs Local Development
# ============================================
# FOR DOCKER: Use service names (mysql, redis, rabbitmq)
# FOR LOCAL: Use localhost with mapped ports (localhost:33060, localhost:6379, localhost:5672)

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=4000
TASK_SERVICE_PORT=4000
TASK_SERVICE_BASE_URL=http://localhost:4000

# ============================================
# DATABASE URLS
# ============================================
# FOR DOCKER (docker-compose):
DATABASE_URL=mysql://devuser:devuser_password@mysql:3306/task_service_db
REDIS_URL=redis://redis:6379
RABBITMQ_URL=amqp://devuser:devpass@rabbitmq:5672

# FOR LOCAL DEVELOPMENT (uncomment and use these):
# DATABASE_URL=mysql://devuser:devuser_password@localhost:33060/task_service_db
# REDIS_URL=redis://localhost:6379
# RABBITMQ_URL=amqp://devuser:devpass@localhost:5672

# ============================================
# MYSQL CONFIGURATION
# ============================================
MYSQL_HOST=mysql               # Use 'localhost' for local development
MYSQL_PORT=3306                # Internal port (use 33060 for local mapped port)
MYSQL_USER=devuser
MYSQL_PASSWORD=devuser_password
MYSQL_DATABASE=task_service_db
MYSQL_ROOT_PASSWORD=root_password

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=redis               # Use 'localhost' for local development
REDIS_PORT=6379

# ============================================
# RABBITMQ CONFIGURATION
# ============================================
RABBITMQ_QUEUE_NOTIFICATION=notification-events
RABBITMQ_QUEUE_TODO=todo-events

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# NOCOBASE CONFIGURATION (Optional)
# ============================================
APP_ENV=development
APP_PORT=13030
APP_HOST=0.0.0.0
INIT_ROOT_EMAIL=admin@nocobase.com
INIT_ROOT_PASSWORD=admin123
INIT_ROOT_NICKNAME=Admin

# ============================================
# TIMEZONE
# ============================================
TZ=Asia/Ho_Chi_Minh
