{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/src/*"],
      "@/*": ["src/*"],
      "@/controllers/*": ["src/v1/controllers/*"],
      "@/middlewares/*": ["src/v1/middlewares/*"],
      "@/services/*": ["src/v1/services/*"],
      "@/utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*.ts", "prisma/*.ts", "../shared/src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "prisma/migrations/*"]
}
